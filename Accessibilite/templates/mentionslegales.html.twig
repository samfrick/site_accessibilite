{% extends 'base.html.twig' %}

{% block main %}
<!--Fil d'ariiane -->
<div class="max-w-4xl mx-auto w-full flex justify-start px-4 mt-4">
<nav class="flex items-center text-sm text-gray-600 mt-4" aria-label="Fil d'Ariane">
  <ol class="inline-flex items-center space-x-1 md:space-x-3">
    
    <!-- Accueil -->
    <li class="inline-flex items-center">
      <a href="{{ path('home') }}" 
         class="inline-flex items-center text-gray-600 hover:text-[#3ca0e7] focus:text-[#3ca0e7]">
        Accueil &raquo;
      </a>
    </li>

    <!-- affichage nom du plat -->
    <li class="relative group focus-within:z-20">
      <div class="flex items-center">
       
        <button
          type="button"
          aria-haspopup="menu"
          aria-expanded="false"
          class="ml-1 text-gray-600">
          Mentions légales <span class="ml-1"></span>
        </button> 
      </div>
    </li>
  </ol>
</nav>
</div>
<!--Fin du fil d'arianne-->

<main id="main-content" class="max-w-2xl mx-auto rounded-lg shadow-md mt-10 p-6 bg-white text-gray-800 leading-relaxed"
    role="main">
    <h1 class="text-3xl font-bold mb-6 text-center">Mentions légales</h1>
    <!-- Propriété intellectuelle -->
    <section aria-labelledby="propriete" class="mb-6">
        <h2 id="propriete" class="text-xl font-semibold mb-2">Propriété intellectuelle</h2>
